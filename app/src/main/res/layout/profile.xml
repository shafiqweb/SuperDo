<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutRelativeID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewBennerID"
            android:layout_width="wrap_content"
            android:layout_height="217dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/beauty_perlour" />

        <View
            android:id="@+id/viewProfileID"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@id/imageViewBennerID"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#c245d2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewOwnerProfileID"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="235dp"
            android:background="@drawable/profile_picture_circle_png_blank"
            app:srcCompat="@drawable/image101" />

        <TextView
            android:id="@+id/textViewOwnerFullNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:layout_marginTop="225dp"
            android:text="@string/owner_name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/imageViewRaingIconID1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="230dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/rating_icon" />

        <ImageView
            android:id="@+id/imageViewRaingIconID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="230dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/rating_icon" />

        <ImageView
            android:id="@+id/imageViewRaingIconID3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="230dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/rating_icon" />

        <ImageView
            android:id="@+id/imageViewRaingIconID4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="230dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/rating_icon" />

        <ImageView
            android:id="@+id/imageViewRaingIconID5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="230dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/rating_icon" />

        <TextView
            android:id="@+id/textViewReviewsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="244dp"
            android:text="@string/reviews"
            android:textColor="#FFFFFF"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/imageViewFavoriteButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="218dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/favourites_btn_navigation" />

        <View
            android:id="@+id/viewID1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/viewProfileID"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="#9506a7" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageViewOwnerProfileID"
            android:layout_below="@+id/imageViewFavoriteButtonID"
            android:contentDescription="@null"
            app:srcCompat="@drawable/address_pin_icon" />

        <TextView
            android:id="@+id/textViewLocationOwnerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="315dp"
            android:text="@string/owner_location"
            android:textColor="#FFFFFF"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textViewBusinessHoursID"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageViewRaingIconID1"
            android:layout_marginEnd="-20dp"
            android:layout_marginTop="350dp"
            android:text="@string/my_text_business_hour"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewMondayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="380dp"
            android:text="@string/monday"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textViewTuesdayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="400dp"
            android:text="@string/tuesday"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textViewWednesdayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="420dp"
            android:text="@string/wednesday"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textViewThursdayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="440dp"
            android:text="@string/thursday"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textViewFridayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="460dp"
            android:text="@string/friday"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textViewSaturdayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="480dp"
            android:text="@string/saturday"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="510dp">

            <Button
                android:id="@+id/buttonRequestBookingID"
                android:layout_width="226dp"
                android:layout_height="35dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/request_booking_button_design"
                android:text="@string/request_booking_with"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>


</ScrollView>