<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_service"
    android:textAlignment="textStart"
    android:layout_marginStart="30dp"
    android:textSize="23sp"
    android:layout_marginTop="10dp"
    android:textColor="#000000"
    android:textStyle="normal"/>
<TextView
    android:id="@+id/addServiceHeaderTextID"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/header_text"
    android:textAlignment="textStart"
    android:layout_marginStart="170dp"
    android:textSize="23sp"
    android:layout_marginTop="10dp"
    android:textColor="#000000"
    android:textStyle="normal"/>
<ImageView
    android:id="@+id/uploadImageID"
    android:contentDescription="@null"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:src="@drawable/upload_service_photo_btn2x"
    android:layout_marginTop="42dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/upload_your_service_photo_max_3"
    android:layout_marginTop="138dp"
    android:layout_centerHorizontal="true"
    android:textSize="17sp"
    android:textColor="#000000"/>
<Button
    android:id="@+id/addSubCategoryButtonID"
    android:layout_width="300dp"
    android:layout_height="47dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="185dp"
    android:background="@drawable/edit_text_border"
    android:drawableEnd="@drawable/dropdown_icon_colour2x"
    android:paddingEnd="0dp"
    android:paddingStart="10dp"
    android:text="@string/add_sub_category"
    android:textAlignment="textStart"
    android:textAllCaps="false"
    android:textColor="#693bf4"
    android:textSize="20sp" />

<EditText
    android:id="@+id/descriptionEditTextID"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="250dp"
    android:background="@drawable/edit_text_border"
    android:hint="Description"
    android:paddingBottom="17dp"
    android:paddingEnd="0dp"
    android:paddingStart="10dp"
    android:layout_centerHorizontal="true"
    android:cursorVisible="true"
    android:textAlignment="textStart"
    android:textAllCaps="false"
    android:textColor="#693bf4"
    android:textColorHint="#693bf4"
    android:textSize="20sp"
    android:inputType="text" />
<EditText
    android:id="@+id/priceEditTextID"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="310dp"
    android:background="@drawable/edit_text_border"
    android:hint="Price"
    android:paddingBottom="17dp"
    android:paddingEnd="0dp"
    android:paddingStart="10dp"
    android:layout_centerHorizontal="true"
    android:cursorVisible="true"
    android:textAlignment="textStart"
    android:textAllCaps="false"
    android:textColor="#693bf4"
    android:textColorHint="#693bf4"
    android:textSize="20sp"
    android:inputType="number" />
<EditText
    android:id="@+id/durationEditTextID"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="370dp"
    android:background="@drawable/edit_text_border"
    android:hint="Approximate Duration"
    android:paddingBottom="17dp"
    android:paddingEnd="0dp"
    android:paddingStart="10dp"
    android:layout_centerHorizontal="true"
    android:cursorVisible="true"
    android:textAlignment="textStart"
    android:textAllCaps="false"
    android:textColor="#693bf4"
    android:textColorHint="#693bf4"
    android:textSize="20sp"
    android:inputType="text" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="420dp"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    >
    <Button
        android:id="@+id/buttonCancelID"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"
        android:background="#f50808"
        android:text="@string/cancel"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:ignore="ButtonStyle" />
    <Button
        android:id="@+id/addButtonID"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="30dp"
        android:background="#2411f1"
        android:text="Add"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:ignore="ButtonStyle" />
</LinearLayout>




</RelativeLayout>