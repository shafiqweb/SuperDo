<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookingRelativeLayoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.BookingDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarBookingDetailsID"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#c245d2"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/back_button_booking_detailsID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/back_btn" />

            <TextView
                android:id="@+id/toolbar_title_booking_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/booking_details"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewBookingProfileImageID"
            android:layout_width="50dp"
            android:layout_height="53dp"
            android:layout_below="@+id/toolbarBookingDetailsID"
            android:layout_marginStart="23dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/image101" />

        <TextView
            android:id="@+id/textViewBookingOwnerFullNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarBookingDetailsID"
            android:layout_marginStart="85dp"
            android:layout_marginTop="26dp"
            android:text="@string/owner_full_name"
            android:textColor="#a732bc"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageViewServiceBookingDetailsID"
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/service_booking_details_icon2x" />

        <Button
            android:id="@+id/buttonSelectServiceID"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/dropdown_icon_colour2x"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/select_service"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#693bf4"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageViewDateTimeBookingDetailsID"
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="230dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/time_booking_details_icon2x" />

        <Button
            android:id="@+id/buttonAvailableDateBookingDetailsID"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="235dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/dropdown_icon_colour2x"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/select_available_date"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#693bf4"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageViewAvailableTimeBookingDetailsID"
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="310dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/available_time_booking_details_icon2x" />

        <Button
            android:id="@+id/buttonAvailableTimeBookingDetailsID"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/dropdown_icon_colour2x"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/select_available_time"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#693bf4"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageViewGoogleMapBookingDetailsID"
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="390dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/google_map_pin_icon2x" />

        <EditText
            android:id="@+id/editTextEnterAddressBookingDetailsID"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="83dp"
            android:layout_marginTop="395dp"
            android:background="@drawable/edit_text_border"
            android:hint="@string/enter_address"
            android:paddingBottom="17dp"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:cursorVisible="true"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#693bf4"
            android:textColorHint="#693bf4"
            android:textSize="20sp"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/editTextEnterAddressBookingDetailsID"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonConfirmBookingID"
                android:layout_width="226dp"
                android:layout_height="35dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/request_booking_button_design"
                android:text="@string/confirm_booking"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/buttonCancelBookingID"
                android:layout_width="226dp"
                android:layout_height="35dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cancel_booking_button_design"
                android:text="@string/cancel_booking"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>