<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_service_categoryID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:override="true"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/serviceCategoryLayoutID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.ServiceCategoryActivity"
        tools:layout_editor_absoluteY="81dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_service_categoryID"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#c245d2"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/service_category"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <ListView
            android:id="@+id/serviceListviewID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_service_categoryID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="80dp"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_service_category"
        app:menu="@menu/menu_drawer_view" />
</android.support.v4.widget.DrawerLayout>