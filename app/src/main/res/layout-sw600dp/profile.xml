<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutRelativeID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewBennerID"
        android:layout_width="wrap_content"
        android:layout_height="217dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/beauty_perlour" />

    <View
        android:id="@+id/viewID"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@id/imageViewBennerID"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#c245d2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewOwnerProfileID"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="235dp"
        app:srcCompat="@drawable/image101" />

    <TextView
        android:id="@+id/textViewOwnerFullNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="225dp"
        android:text="Owner Name"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewRaingIconID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/rating_icon" />
    <ImageView
        android:id="@+id/imageViewRaingIconID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/rating_icon" />
    <ImageView
        android:id="@+id/imageViewRaingIconID3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/rating_icon" />
    <ImageView
        android:id="@+id/imageViewRaingIconID4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/rating_icon" />
    <ImageView
        android:id="@+id/imageViewRaingIconID5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/rating_icon" />

    <TextView
        android:id="@+id/textViewReviewsID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="227dp"
        android:layout_marginStart="220dp"
        android:text="(4 Reviews)" />

    <ImageView
        android:id="@+id/imageViewFavoriteButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/favourites_btn_navigation" />
    <View
        android:id="@+id/viewID1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/viewID"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#9506a7" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageViewOwnerProfileID"
        android:layout_below="@+id/imageViewFavoriteButtonID"
        app:srcCompat="@drawable/address_pin_icon" />

    <TextView
        android:id="@+id/textViewLocationOwnerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="315dp"
        android:text="H:15,Sonargaon Janapath,Dhaka-1230" />

    <TextView
        android:id="@+id/textViewBusinessHoursID"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageViewRaingIconID1"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="-20dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="@string/my_text_business_hour" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMondayID"
        android:layout_marginStart="33dp"
        android:textSize="16sp"
        android:layout_marginTop="380dp"
        android:textColor="#000000"
        android:text="Monday:  9.00am-5.00pm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTuesdayID"
        android:layout_marginStart="33dp"
        android:textSize="16sp"
        android:layout_marginTop="400dp"
        android:textColor="#000000"
        android:text="Tuseday:  9.00am-5.00pm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWednesdayID"
        android:layout_marginStart="33dp"
        android:layout_marginTop="420dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Wednesday:  9.00am-5.00pm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewThursdayID"
        android:layout_marginStart="33dp"
        android:layout_marginTop="440dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Thursday:  9.00am-5.00pm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFridayID"
        android:layout_marginStart="33dp"
        android:layout_marginTop="460dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Friday:  9.00am-5.00pm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSaturdayID"
        android:layout_marginStart="33dp"
        android:layout_marginTop="480dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Saturday:  9.00am-5.00pm"/>

    <Button
        android:id="@+id/requestBookingID"
        android:layout_width="226dp"
        android:layout_height="31dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="515dp"
        android:background="#5a64ef"
        android:text="Request Booking with"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="normal" />


</RelativeLayout>